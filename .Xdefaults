! general settings
URxvt.title: urxvt-unicode-256color
URxvt.termName: rxvt-unicode-256color
URxvt.imLocale: en_GB.UTF-8
URxvt.scrollBar: False
URxvt.scrollStyle: rxvt
URxvt.saveLines: 65536
URxvt.cursorBlink: True
URxvt.borderLess: False
URxvt.insecure: True
URxvt.iso14755: False
URxvt.iso14755_52: False
URxvt.visualBell: True
URxvt.urgentOnBell: True
URxvt.cursorColor: #d79921
URxvt*inheritPixmap: false
! Jump to bottom (prompt) on keypress.
URxvt*scrollTtyKeypress: true
URxvt*internalBorder: 0
URxvt*externalBorder: 0

! enable extensions
URxvt.perl-ext: default,matcher,tabbed,selection-to-clipboard

! clipboard
!! use in external programs
URxvt.clipboard.autocopy: True
!URxvt.keysym.M-c: perl:clipboard:copy
!URxvt.keysym.M-v: perl:clipboard:paste

! URLs
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.urlButton: 1
URxvt.url-select.underline: True

! fonts
URxvt.font: xft:Office Code Pro:size=10
URxvt.boldFont: xft:Office Code Pro Bold:size=10
URxvt.lineSpace: -1
URxvt.letterSpace: -1.5
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

! tabs
URxvt.tabbed.tabbar-fg: 235
URxvt.tabbed.tabbar-bg: 3
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 235
URxvt.tabbed.autohide: yes
URxvt.tabbed.new-button: no
URxvt.tabbed.title: no

! gruvbox theme
!! hard contrast: *background: #1d2021
!! norm contrast: *background: #282828
!! soft contrast: *background: #32302f
*background: #282828
*foreground: #ebdbb2
!! black + darkGrey
*color0:  #1d2021
*color8:  #928374
!! darkRed + red
*color1:  #cc241d
*color9:  #fb4934
!! darkGreen + green
*color2:  #98971a
*color10: #b8bb26
!! darkYellow + yellow
*color3:  #d79921
*color11: #fabd2f
!! darkBlue + blue
*color4:  #458588
*color12: #83a598
!! darkMagenta + magenta
*color5:  #b16286
*color13: #d3869b
!! darkCyan + cyan
*color6:  #689d6a
*color14: #8ec07c
!! lightGrey + white
*color7:  #a89984
*color15: #ebdbb2

